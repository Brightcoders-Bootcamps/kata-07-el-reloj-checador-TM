<div class="jumbotron text-center" style="margin-bottom:0">
<h1>Update Branch</h1>
</div>

<% if @branch.errors.any? %> 
  <div id="error_explanation" class="alert alert-danger"> 
    <button type="button" class="close" data-dismiss="alert">&times;</button> 
    <h5><%= pluralize(@branch.errors.count, "error") %> prohibited this check from being saved:</h5>  
    <hr> 
    <ul> 
      <% @branch.errors.full_messages.each do |message| %> 
        <li><%= message %></li> 
      <% end %> 
    </ul> 
    </div> 
<% end %>

<div class="container p-3 my-3 border">
    <%= form_with model: @branch do |form| %>
    <div class="form-group">
        <%= label_tag 'name', 'Name:'%>
        <%= form.text_field :name, class:'form-control'%>
    </div>
    
    <div class="form-group">
        <%= label_tag 'address', 'Address:'%>
        <%= form.text_field :address, class:'form-control'  %>
    </div>
    
    <%= submit_tag "Update Branch", class:"btn btn-outline-success"%>
    <% end %>
</div>
  