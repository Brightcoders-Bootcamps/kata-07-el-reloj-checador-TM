<h3>Check Log</h3>
<% @reports.each do |report| %>
  <% related_employee = Employee.find(report.employee_id) %>
  <ul class="list-group list-group-horizontal">
    <li class="list-group-item"><%= related_employee.private_number %></li>
    <li class="list-group-item"><%= related_employee.name %></li>
    <li class="list-group-item"><%= report.check %></li>
    <li class="list-group-item"><%= report.created_at.strftime("%m/%d/%Y at %I:%M %p") %></li>
  </ul>
<% end %>