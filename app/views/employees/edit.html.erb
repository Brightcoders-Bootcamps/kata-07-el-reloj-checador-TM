<div class="container p-3 my-3 border">
<h3>Update Employee</h3>
</div>

<div class="container p-3 my-3 border">
  <%= form_with model: @employee do |form| %>
    <div class="form-group">
      <%= label_tag "name", "Name:"%>
      <%= form.text_field :name, class:"form-control"%>
    </div>
    <div class="form-group">
      <%= label_tag "email", "E-mail:"%>
      <%= form.text_field :email, class:"form-control"%>
    </div>
    <div class="form-group">
      <%= label_tag "position", "Position:"%>
      <%= form.text_field :position, class:"form-control"%>
    </div>
    <div class="form-group">
      <%= label_tag "private_number", "Private number:"%>
      <%= form.text_field :private_number, class:"form-control"%>
    </div>
      
    <div class="form-group">
      <%= label_tag 'status', 'Employee active:'%>
      <%= form.check_box :status %>
    </div>
    <%= submit_tag "Update employee", class:"btn btn-outline-success"%>
    <% end %>
</div>